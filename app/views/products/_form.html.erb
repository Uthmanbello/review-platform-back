<%= form_with(model: [@category, @sub_category, @product], local: true) do |form| %>
  <% if @product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :delivery_cost, style: "display: block" %>
    <%= form.text_field :delivery_cost %>
  </div>

  <div>
    <%= form.label :delivery_time, style: "display: block" %>
    <%= form.text_field :delivery_time %>
  </div>

  <div>
    <%= form.label :vendor, style: "display: block" %>
    <%= form.text_field :vendor %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.label :size, style: "display: block" %>
    <%= form.text_field :size %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label :sub_category_id, style: "display: none" %>
    <%= form.hidden_field :sub_category_id, value: @sub_category.id if @sub_category.present? %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
